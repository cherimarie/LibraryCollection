<%= form_for @author do |f| %>
    <%= f.label :name %> 
    <%= f.text_field :name %> 

    <%= f.label :sort_by %>
    <% if params[:action] == "new" %>
      <%= f.text_field :sort_by %> 
    <% else %>
      <%= f.select :sort_by, collection: @author.name.split %>  
    <% end %> 
  
    <%= f.submit "Submit", class: "btn2" %>
<% end %>