<h2>Authors</h2>
<% if admin_user? %>
  <%= link_to "New Author", new_author_path, class: "btn right" %>
<% end %>

<table class="index">
  <thead>
    <tr>
      <th>Author Name</th>
      <th>Number of Books</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |a| %>
    <tr>
      <td> <%= link_to a.name, author_path(a.id) %></td>
      <td><%= a.books.count %></td>
      <% if admin_user? %>
        <td>
          <%= link_to "Edit", edit_author_path(a) %> 
          <%= link_to "Delete", author_path(a), method: :delete, data: {confirm: "Are you sure you want to delete this author?"} %> 
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>