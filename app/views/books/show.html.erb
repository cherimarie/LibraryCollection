<h2>Book: <%= @book.title %></h2>
<h3> <%= @book.available ? "available for checkout" : "unavailable for checkout" %> </h3>

<div class="show">
  <% if librarian_user? %>
    <%=  check_box_tag :selected, @book.id, @book.selected, id: "book-select_#{@book.id}"  %>
  <% end %>
  <p>Author(s): </p>
    <ul>
    <% @book.authors.each do |a| %>
      <li><%= link_to a.name, author_path(a) %> </li>
      <% end %> 
    </ul>

  <p>ISBN: <%= @book.isbn %></p>
  <p>
  Genre: 
  <% if @book.genre %>
    <%= link_to @book.genre.name, genre_path(@book.genre) %>
  <% end %> 
  </p>
  <p>Keyword(s): </p>
    <ul>
    <% @book.keywords.each do |k| %>
      <li><%= link_to k.name, keyword_path(k) %> </li>
      <% end %> 
    </ul>
</div>

<% if librarian_user? %>
<%= link_to "Loan Book", new_loan_path(book_id: @book.id), id: "new-book-loan-link", remote: true %>

<h3>Loan History:</h3>
<%= render 'loans/loan_list.html.erb' %>

<br />
  <%= link_to "Edit This Book", edit_book_path(@book), class: "right btn2" %>
<% end %>
<% if admin_user? %>
  <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure you want to delete this book?"}, class: "right btn2" %> 
<% end %>