<h1><%= @book.title %></h1>
<ul>
  <li>Author(s): <% @book.authors.each do |a| %>
      <%= a.name %> 
      <% end %> 
  </li>
  <li>ISBN: <%= @book.isbn %></li>
  <li>Genre: <%= @book.genre.name %></li>
</ul>

<% if user_signed_in? and current_user.has_role? :admin %>
  <%= link_to "Edit This Book", edit_book_path(@book.id) %>
<% end %>