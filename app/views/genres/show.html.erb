<h2>Genre: <%= @genre.name %> <% if @genre.abbreviation then %> | <%= @genre.abbreviation%> <% end %></h2>

<% if admin_user? %>
  <%= link_to "Edit Genre", edit_genre_path(@genre), class: "btn2" %>
  <%= link_to "Delete", genre_path(@genre), method: :delete, data: {confirm: "Are you sure you want to delete this genre?"}, class: "btn2" %> 
<% end %>

<table class="index tablesorter">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% @genre.books.each do |b| %>
      <tr>
      <td><%= link_to b.title, book_path(b.id) %></td>
      <td><% b.authors.each do |a| %>
            <%= link_to a.name, author_path(a) %>
          <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>  
</table>