<h2>Keywords</h2>
<% if current_user && (current_user.has_role? :admin) %>
  <%= link_to "New keyword", new_keyword_path, class: "btn right" %>
<% end %>

<table class="index">
  <thead>
    <tr>
      <th>Keyword</th>
      <th>Number of Books</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @keywords.each do |k| %>
    <tr>
      <td> <%= link_to k.name, keyword_path(k) %></td>
      <td><%= k.books.count %></td>
      <% if current_user && (current_user.has_role? :admin) %>
        <td>
          <%= link_to "edit", edit_keyword_path(k) %>
          <%= link_to "delete", keyword_path(k), method: :delete, data: {confirm: "Are you sure you want to delete this keyword?"} %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>