<h1><%= @keyword.name %></h1>

<table class="index">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
  </tr>

  <% @keyword.books.each do |b| %>
    <tr>
    <td><%= link_to b.title, book_path(b.id) %></td>
    <td><% b.authors.each do |a| %>
        <%= link_to a.name, author_path(a.id)%>
        <% end %>
    </td>
    <td><%= b.genre.name if b.genre %></td>
    </tr>
  <% end %>
</table>
