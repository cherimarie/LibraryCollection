<h2>Keyword: <%= @keyword.name %></h2>

<% if user_signed_in? and current_user.has_role? :admin %>
  <%= link_to "Edit Keyword", edit_keyword_path(@keyword), class: "right btn2" %>
  <%= link_to "Delete", keyword_path(@keyword), method: :delete, data: {confirm: "Are you sure you want to delete this keyword?"}, class: "right btn2" %> 
<% end %>

<table class="index">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
  </tr>

  <% @keyword.books.each do |b| %>
    <tr>
      <td><%= link_to b.title, book_path(b.id) %></td>
      <td><% b.authors.each do |a| %>
            <%= link_to a.name, author_path(a.id)%>
          <% end %>
      </td>
      <td>
        <% if b.genre %>
          <%= link_to b.genre.name, genre_path(b.genre) %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>


