<h1> Search Results </h1>

<% if @authors.count > 0 || @books.count > 0 %>
  <h3>Authors</h3>
  <% @authors.each do |a| %>
    <p><%= link_to a.name, author_path(a.id) %>, total: <%= a.books.count %></p>
  <% end %>
  <h3>Books</h3>
  <% @books.each do |b| %>
    <p><%= link_to b.title, book_path(b.id) %></p>
  <% end %>
  
<% else %>
  <p> Your search yeilded no results. </p>
<% end %>
